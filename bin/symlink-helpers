#!/usr/bin/env bash

set -eou pipefail
set -x

declare -a FILES=(bin Earthfile Makefile tsconfig.json .pre-commit-config.yaml)

git submodule add -b main git@github.com:zph/joplin-plugin-helpers.git .config/joplin-plugin-helpers
for f in "${FILES[@]}";do
  ln -sf ".config/joplin-plugin-helpers/${f}" .
done
